    <Style
		x:Key="Button_Normal_DeleteItemStyle"
		TargetType="{x:Type Button}"
		BasedOn="{StaticResource Button_Normal_ActionStyle}">

        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type ButtonBase}">
                    <Border
				        Name="deleteButtonBorder"
				        Background="{TemplateBinding Background}"
				        BorderBrush="{TemplateBinding BorderBrush}"
				        BorderThickness="{TemplateBinding BorderThickness}"
				        CornerRadius="{TemplateBinding Border.CornerRadius}">
                        <Image Name="imageDeleteItemButton"
                               Source="../Images/DeleteItemButtonImage.png"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        </Image>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="IsMouseOver"
                            Value="True">
                            <Setter
                                Property="Background"
                                Value="{StaticResource GreyBlue_ColorBrush}">
                            </Setter>
                        </Trigger>
                        <Trigger
                            Property="IsEnabled"
                            Value="False">
                            <Setter
                                Property="Background"
                                Value="WhiteSmoke">
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

