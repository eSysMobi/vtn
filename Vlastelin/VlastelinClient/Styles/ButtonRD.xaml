    <Style
		x:Key="Button_BaseStyle"
		TargetType="{x:Type Button}"
		BasedOn="{StaticResource BaseStyle}">
        <Setter
			Property="Margin"
			Value="{StaticResource Margin_Default}" />
        <Setter
			Property="Padding"
			Value="{StaticResource Padding_Default}" />
        <Setter
			Property="FontSize"
			Value="{StaticResource TextElement_Default_FontSize}" />

        <Style.Triggers>
            <Trigger
				Property="IsEnabled"
				Value="False">
                <Setter
					Property="Opacity"
					Value="0.75" />
            </Trigger>
        </Style.Triggers>
    </Style>

