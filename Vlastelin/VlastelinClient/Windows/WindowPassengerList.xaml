<local:WindowBase x:Class="VlastelinClient.Windows.WindowPassengerList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:VlastelinClient.UserControls"
        xmlns:extToolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended"
        xmlns:local="clr-namespace:VlastelinClient"
        xml:lang="ru-RU"
        Title="Список пассажиров" 
        Icon="..\Images\Icons\logo.ico"
        WindowStartupLocation="CenterScreen"
        Height="330" 
        Width="450" Loaded="WindowBase_Loaded">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Border
            Style="{StaticResource Border_GroupStyle}">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="1"
                    Margin="0,20,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="250"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="За промежуток от">
                    </TextBlock>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="До"
                        Margin="5,0,0,20">
                    </TextBlock>

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="Фамилия">
                    </TextBlock>

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Text="Имя">
                    </TextBlock>

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Text="Отчество">
                    </TextBlock>

                    <uc:CustomDatePicker
                        Grid.Row="0"
                        Grid.Column="1"
                        x:Name="datePickerFrom">
                    </uc:CustomDatePicker>

                    <uc:CustomDatePicker
                        Grid.Row="1"
                        Grid.Column="1"
                        x:Name="datePickerTo"
                        Margin="5,0,0,20">
                    </uc:CustomDatePicker>

                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Name="textBoxSurname"
                        Text="{Binding Surname, Mode=OneWay}" >
                    </TextBox>

                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Name="textBoxName"
                        Text="{Binding Name, Mode=OneWay}">
                    </TextBox>

                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Name="textBoxPatronymic"
                        Text="{Binding Patronymic, Mode=OneWay}">
                    </TextBox>
                </Grid>
            </Grid>
        </Border>

